echo "Hostname: $(hostname)" | out-file windows.info
echo "OS version: $([System.Environment]::OSVersion.Version.Major)" | out-file -Append windows.info
echo "CPU cores: $(Get-WmiObject -class Win32_processor | Select-Object -ExpandProperty  'NumberOfCores')" | out-file -Append windows.info
echo "RAM: $(Get-WmiObject win32_physicalmemory | Select-Object -ExpandProperty 'Capacity' | Measure-Object -Sum| Select-Object -ExpandProperty 'Sum')" | out-file -Append windows.info

$hdd_used=$(Get-PSDrive C | Select-Object -ExpandProperty Used)
$hdd_free=$(Get-PSDrive C | Select-Object -ExpandProperty Free)
$hdd_total = $hdd_used + $hdd_free
echo "HDD size: for C:\ or / $hdd_total" | out-file -Append windows.info

echo " HDD disk usage: for C:\ or / $hdd_used" | out-file -Append windows.info
